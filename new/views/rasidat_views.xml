<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rasidat_list">
      <field name="name">rasidat.list</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="Cname"/>
          <field name="date"/>
          <field name="amount"/>
          <field name="to"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="rasidat_form">
      <field name="name">rasidat.form</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="Cname"/>
                    <field name="date"/>
                </group>
                <group>
                    <field name="amount"/>
                    <field name="to"/>
                </group>
            </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="rasidat_action_window">
      <field name="name">Sobek Rasidat</field>
      <field name="res_model">rasidat.rasidat</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

     


