<odoo>
  <data>

    <record model="ir.ui.view" id="rasidat_list">
      <field name="name">rasidat.list</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="date"/>
          <field name="amount" sum="a"/>
          <field name="check"/>
          <field name="to"/>
          <field name="through"/>
          <field name="active"/>
        </tree>
      </field>
    </record>
  <record model="ir.ui.view" id="rasidat_form_view">
      <field name="name">rasidat form view</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>        
                  <field name="no"/>
                  <field name="costumer_id"/>
                  <field name="date"/>
                  <field name="through"/>
                </group>
                <group>
                  <field name="amount"/>
                  <field name="check"/>
                  <field name="to"/>
                  <field name="active"/>
              </group>
            </group>
            <group>
                     <field name="des"/>
              </group>
            </sheet>
        </form>
      </field>
    </record>



  </data>
</odoo>
