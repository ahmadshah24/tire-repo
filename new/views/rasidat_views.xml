<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="rasidat_list">
      <field name="name">rasidat.list</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="costumer_id"/>
          <field name="date"/>
          <field name="amount" sum="a"/>
          <field name="check"/>
          <field name="to"/>
          <field name="through"/>
           <field name="active"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="rasidat_form">
      <field name="name">rasidat.form</field>
      <field name="model">rasidat.rasidat</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="costumer_id"/>
                    <field name="date"/>
                    <field name="through"/>
                </group>
                <group>
                    <field name="check"/>
                    <field name="amount"/>
                    <field name="to"/>
                     <field name="active"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="rasidat_action_window">
      <field name="name">Sobek Rasidat TO Office</field>
      <field name="res_model">rasidat.rasidat</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>