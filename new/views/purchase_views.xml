<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="atlas_purchase_list">
      <field name="name">atlas.purchase.list</field>
      <field name="model">atlas.purchase</field>
      <field name="arch" type="xml">
        <tree>
          <field name="invoice"/>
          <field name="vender_id"/>
          <field name="date"/>
          <field name="amount"/>
           <field name="active"/>
           <field name="state"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="atlas_purchase_form">
      <field name="name">atlas.purchase.form</field>
      <field name="model">atlas.purchase</field>
      <field name="arch" type="xml">
        <form>
          <header>
                <!-- <button name="action_draft" string="Draft" type="object" states="approved"/> -->
                <button name="action_approved" string="Approve" type="object" states="draft"/>
                <field name="state" widget="statusbar" />
            </header>
          <sheet>
            <group>
                <group>
                    <field name="invoice" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                    <field name="vender_id" required="1" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                     <field name="active"/>
                </group>
                <group>
                    <field name="date" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                    <field name="amount" readonly="1" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                </group>
            </group>
              <group>
                     <field name="des" attrs="{'readonly': [('state', '=', 'approved')]}"/>
              </group>
            <notebook>
              <page string="product list">
                  <group>
                      <field name="line_ids" attrs="{'readonly': [('state', '=', 'approved')]}">
                      <tree editable="top" >
                        <field name="product_id" required="1"/>
                        <field name="quantity" required="1"/>
                        <field name="price" required="1"/>
                        <field name="total"/>
                      </tree>
                    </field>
                  </group>
              </page>
            </notebook>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="purchase_action_window">
      <field name="name">Sobek purchase</field>
      <field name="res_model">atlas.purchase</field>
      <field name="view_mode">tree,form</field>
    </record>
 
  </data>
</odoo>