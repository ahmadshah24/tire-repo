<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="costumer_rasidat_list">
      <field name="name">costumer.rasidat.list</field>
      <field name="model">crasidat.crasidat</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="name"/>
          <field name="date"/>
          <field name="check"/>
          <field name="amount"/>
           <field name="active"/>
          <field name="costumer_id"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="costumer_rasidat_form">
      <field name="name">costumer.rasidat.form</field>
      <field name="model">crasidat.crasidat</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="costumer_id"/>
                </group>
                <group>
                    <field name="date"/>
                    <field name="check"/>
                    <field name="amount"/>
                     <field name="active"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="crasidat_action_window">
      <field name="name">Sobek Rasidat from costumers </field>
      <field name="res_model">crasidat.crasidat</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>