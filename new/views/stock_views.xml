<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="stock_list">
      <field name="name">stock.list</field>
      <field name="model">stock.stock</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="name"/>
          <field name="type"/>
          <field name="cost"/>
          <field name="amount"/>
          <field name="total"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="stock_form">
      <field name="name">stock.form</field>
      <field name="model">stock.stock</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="name"/>
                    <field name="type"/>
                </group>
                <group>
                    <field name="cost"/>
                    <field name="amount"/>
                    <field name="total"/>
                </group>
            </group>
             <notebook>
              <page string="Khoriji Stock Information">
				<group>
					 	
							<field name="cname"/>
							<field name="billNo"/>
							<field name="date"/>
							<field name="type"/>
                            <field name="camount"/>
                            <field name="ccost"/>
							<field name="ctotal"/>
                        
				</group>
              </page>
              <page string="Stock Reminder Information">
                <group>

                            <field name="reminder"/>
                            <field name="mreminder"/>
                </group>
              </page>
            </notebook>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="stock_action_window">
      <field name="name">Sobek Stock Tire And Tube</field>
      <field name="res_model">stock.stock</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>