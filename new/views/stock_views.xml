<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="stock_list">
      <field name="name">stock.list</field>
      <field name="model">stock.stock</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="name"/>
          <field name="product_id"/>
          <field name="cost"/>
          <field name="amount"/>
          <field name="total"/>
           <field name="active"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="stock_form">
      <field name="name">stock.form</field>
      <field name="model">stock.stock</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="name"/>
                    <field name="product_id"/>
                </group>
                <group>
                    <field name="cost"/>
                    <field name="amount"/>
                    <field name="total"/>
                     <field name="active"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
             <notebook>
              <page string="Khoriji Stock Information">
                    <field name="line_ids">
			        	      <tree editable="top">
                           <field name="costumer_id"/>
                           <field name="billNo"/>
                           <field name="date"/>
                           <field name="product_id"/>
                           <field name="cquantity"/>
                           <field name="cprice"/>
                           <field name="ctotal"/>
                        </tree>
                      </field>
              </page>
            </notebook>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="stock_action_window">
      <field name="name">Sobek Stock Tire And Tube</field>
      <field name="res_model">stock.stock</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>