<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="return_list">
      <field name="name">return.list</field>
      <field name="model">return.return</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="billNo"/>
          <field name="costumer_id"/>
          <field name="date"/>
          <field name="total"/>
           <field name="active"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="return_form">
      <field name="name">return.form</field>
      <field name="model">return.return</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="billNo"/>
                    <field name="costumer_id"/>
                    <field name="product_id"/>
                </group>
                <group>
                    <field name="date"/>
                    <field name="total"/>
                     <field name="active"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="return_action_window">
      <field name="name">Sobek Return</field>
      <field name="res_model">return.return</field>
      <field name="view_mode">tree,form</field>
    </record>

 
  </data>
</odoo>