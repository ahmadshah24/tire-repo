<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="atlas_purchase_line_list">
      <field name="name">atlas.purchase.line.list</field>
      <field name="model">atlas.purchase.line</field>
      <field name="arch" type="xml">
        <tree>
          <field name="quantity"/>
          <field name="price"/>
          <field name="total"/>
          <field name="product_id"/>
          <field name="purchase_id"/>
          <field name="active"/>
        </tree>
      </field>
    </record>
 
<!-- form _________________________________ -->

    <record model="ir.ui.view" id="atlas_purchase_line_form">
      <field name="name">atlas.purchase.line.form</field>
      <field name="model">atlas.purchase.line</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="quantity"/>
                    <field name="price"/>
                    <field name="total"/>
                    <field name="product_id"/>
                    <field name="purchase_id"/>
                    <field name="active"/>
                </group>
            </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="atlas_purchase_line_action_window">
      <field name="name">Sobek Atlas purchase Line</field>
      <field name="res_model">atlas.purchase.line</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>