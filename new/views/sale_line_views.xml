<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="atlas_sale_line_list">
      <field name="name">atlas.sale.line.list</field>
      <field name="model">atlas.sale.line</field>
      <field name="arch" type="xml">
        <tree>
          <field name="quantity"/>
          <field name="price"/>
          <field name="total"/>
          <field name="product_id"/>
          <field name="sale_id"/>
          <field name="active"/>
          <field name="product_ids"/>
        </tree>
      </field>
    </record>
 
<!-- form _________________________________ -->

    <record model="ir.ui.view" id="atlas_sale_line_form">
      <field name="name">atlas.sale.line.form</field>
      <field name="model">atlas.sale.line</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="quantity"/>
                    <field name="price"/>
                    <field name="total"/>
                    <field name="product_id"/>
                    <field name="sale_id"/>
                    <field name="active"/>
                </group>
            </group>
             <notebook>
              <page string="Enter products">
				<group>
                     
					<field name="product_ids"/>
                    <field name="quantity"/>
                    <field name="price"/>
                    <field name="total"/>
                     
				</group>
              </page>
            </notebook>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="atlas_sale_line_action_window">
      <field name="name">Sobek Atlas sale Line</field>
      <field name="res_model">atlas.sale.line</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>