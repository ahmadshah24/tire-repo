<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="costumerinfo_list">
      <field name="name">costumerinfo.list</field>
      <field name="model">costumerinfo.costumerinfo</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="name"/>
          <field name="phone"/>
          <field name="address"/>
          <field name="reminder"/>
          <field name="rasid"/>
          <field name="returns"/>
          <field name="sale"/>
        </tree>
      </field>
    </record>
 
<!-- form _________________________________ -->

    <record model="ir.ui.view" id="costumerinfo_form">
      <field name="name">costumerinfo.form</field>
      <field name="model">costumerinfo.costumerinfo</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="name" required="1"/>
                    <field name="phone"/>
                    <field name="address" required="1"/>
                    <field name="active"/>
                </group>
                <group>
                    <field name="rasid"/>
                    <field name="returns"/>
                    <field name="sale"/>
                    <field name="reminder"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="costumerinfo_action_window">
      <field name="name">Sobek Costumers Information</field>
      <field name="res_model">costumerinfo.costumerinfo</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>