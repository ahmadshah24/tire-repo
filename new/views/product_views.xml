<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="atlas_product_list">
      <field name="name">atlas.product.list</field>
      <field name="model">atlas.product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="name"/>
          <field name="type"/>
          <field name="size"/>
          <field name="quantity_onhand"/>
          <field name="pattern"/>
          <field name="pr"/>
           <field name="active"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="atlas_product_form">
      <field name="name">atlas.product.form</field>
      <field name="model">atlas.product</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>  
                    <field name="name" required="1"/>
                    <field name="type" required="1"/>
                    <field name="size" required="1"/>
                </group>
                 <group>
                    <field name="pattern" required="1"/>
                    <field name="pr" required="1"/>
                     <field name="quantity_onhand" readonly="1"/>
                     <field name="active"/>
                </group>
            </group>
              <group>
                     <field name="des"/>
              </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="atlas_product_action_window">
      <field name="name">Sobek Atlas Product</field>
      <field name="res_model">atlas.product</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>