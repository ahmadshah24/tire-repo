<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="atlas_sale_list">
      <field name="name">atlas.sale.list</field>
      <field name="model">atlas.sale</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="billNo"/>
          <field name="costumer_id"/>
          <field name="date"/>
          <field name="amount" sum="a"/>
           <field name="active"/>
           <field name="state"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="atlas_sale_form">
      <field name="name">atlas.sale.form</field>
      <field name="model">atlas.sale</field>
      <field name="arch" type="xml">
        <form>
         <header>
                <button name="action_draft" string="Draft" type="object" states="approved"/>
                <button name="action_approved" string="Approve" type="object" states="draft"/>
                <field name="state" widget="statusbar" />
            </header>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="billNo" required="1" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                    <field name="costumer_id" required="1" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                     <field name="active"/>
                </group>
                <group>
                    <field name="date" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                    <field name="amount" readonly="1" attrs="{'readonly': [('state', '=', 'approved')]}"/>
                </group>
            </group>
              <group>
                     <field name="des" attrs="{'readonly': [('state', '=', 'approved')]}"/>
              </group>
            <notebook>
              <page string="product list">
                  <group>
                      <field name="line_ids" attrs="{'readonly': [('state', '=', 'approved')]}">
                      <tree editable="top" >
                        <field name="product_id" required="1"/>
                        <field name="quantity" required="1"/>
                        <field name="price" required="1"/>
                        <field name="total"/>
                      </tree>
                    </field>
                  </group>
              </page>
            </notebook>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sale_action_window">
      <field name="name">Sobek sale</field>
      <field name="res_model">atlas.sale</field>
      <field name="view_mode">tree,form</field>
    </record>

     <record model="ir.actions.act_window" id="return_action_window">
      <field name="name">Sobek return</field>
      <field name="res_model">return.return</field>
      <field name="view_mode">tree,form</field>
    </record>
    




	<record model="ir.actions.act_window" id="rasidat_action_window">
      <field name="name">Sobek Rasidat</field>
      <field name="res_model">rasidat.rasidat</field>
      <field name="view_mode">tree,form</field>
    </record>


   


      

    <record model="ir.actions.act_window" id="crasidat_action_window">
      <field name="name">Sobek Rasidat from costumers </field>
      <field name="res_model">crasidat.crasidat</field>
      <field name="view_mode">tree,form</field>
    </record>



    <record model="ir.actions.act_window" id="take_action_window">
      <field name="name">Sobek Takes From Office</field>
      <field name="res_model">take.take</field>
      <field name="view_mode">tree,form</field>
    </record>


    


     <record model="ir.actions.act_window" id="costumerinfo_action_window">
      <field name="name">Sobek Costumers Information</field>
      <field name="res_model">costumerinfo.costumerinfo</field>
      <field name="view_mode">tree,form</field>
    </record>


    <record model="ir.actions.act_window" id="atlas_product_action_window">
      <field name="name">Sobek Atlas Product</field>
      <field name="res_model">atlas.product</field>
      <field name="view_mode">tree,form</field>
    </record>
 

    <record model="ir.actions.act_window" id="atlas_purchase_action_window">
      <field name="name">Sobek purchase</field>
      <field name="res_model">atlas.purchase</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="vender_action_window">
      <field name="name">Sobek Vender</field>
      <field name="res_model">vender.vender</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- wizard action -->
    
    <!-- Top menu item -->

    <menuitem name="Sobek Tire" id="new.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Sale" id="new.menu_sale_root" parent="new.menu_root" sequence="1"/>
       <menuitem name="Purchase" id="new.menu_purchase_root" parent="new.menu_root" sequence="2"/>
   	<menuitem name="Office" id="new.menu_office" parent="new.menu_root" action="rasidat_action_window" sequence="3"/>
    

    <!-- submenus -->
    <menuitem name="Sale" id="new.menu_sale" parent="new.menu_sale_root" action="sale_action_window" sequence="1"/>
    <menuitem name="Customer" id="new.menu_customer" parent="new.menu_sale_root" action="costumerinfo_action_window" sequence="2"/>
    <menuitem name="Return" id="new.menu_return" parent="new.menu_sale_root" action="return_action_window" sequence="4"/>
    <menuitem name="product" id="new.menu_product" parent="new.menu_purchase_root" action="atlas_product_action_window" sequence="2"/>
    <menuitem name="purchase"  id="new.menu_purchase" parent="new.menu_purchase_root" action="atlas_purchase_action_window" sequence="1"/>
    <menuitem name="Vender"  id="new.menu_vender" parent="new.menu_purchase_root" action="vender_action_window" sequence="3"/>
    <menuitem name="Rasidat" id="new.menu_office_1" parent="new.menu_office" action="rasidat_action_window"/>
    <menuitem name="Takes" id="new.menu_office_2" parent="new.menu_office" action="take_action_window"/>
    <menuitem name="Costumer Rasidat" id="new.menu_sale_3" parent="new.menu_sale_root" action="crasidat_action_window" sequence="3"/>
    
  </data>
</odoo>