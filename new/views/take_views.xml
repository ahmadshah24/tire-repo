<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="take_list">
      <field name="name">take.list</field>
      <field name="model">take.take</field>
      <field name="arch" type="xml">
        <tree>
          <field name="no"/>
          <field name="date"/>
          <field name="check"/>
          <field name="amount" sum="a"/>
        </tree>
      </field>
    </record>

<!-- form _________________________________ -->

    <record model="ir.ui.view" id="take_form">
      <field name="name">take.form</field>
      <field name="model">take.take</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
                <group>
                    <field name="no"/>
                    <field name="date"/>
                    <field name="check"/>
                    <field name="amount"/>
                </group>
            </group>
        </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="take_action_window">
      <field name="name">Sobek Takes From Office</field>
      <field name="res_model">take.take</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>