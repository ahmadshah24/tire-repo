<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="return_monthly_report">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="body">
                    <div class="">
                    <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                    <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                    <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                </div>
                <center>
                    <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas Returns report</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Bill No</th>
                                <th>Costumer</th>
                                <th>date</th>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.no"/></td>
                                <td><t t-esc="o.billNo"/></td>
                                <td><span t-field="o.costumer_id.name"/></td>
                                <td><t t-esc="o.date"/></td>
                                <td><t t-esc="o.product_id.name"/></td>
                                <td><t t-esc="o.quantity"/></td>
                                <td><t t-esc="o.price"/></td>
                                <td><t t-esc="o.total"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            </div>
        </t>
    </t>
</template>

  
<record model="ir.actions.report" id="action_return_monthly_report">
        <field name="name">Atlas Returns Report</field>
        <field name="model">return.return</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.return_monthly_report</field>
        <field name="report_file">new.return_monthly_report</field>
        <field name="print_report_name">'Atlas Returns Report'</field>
        <field name="binding_model_id" ref="model_return_return"></field>
        <field name="binding_type">report</field>
    </record>

    </data>
</odoo>
