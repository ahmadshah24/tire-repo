<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="product_monthly_report">
            <t t-call="web.basic_layout">
                    <div class="page" style="page-break-after: always;">
                        <div class="body">
                            <div class="">
                                <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                                <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                                <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                            </div>
                        
                        <center>
                            <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas product report</h1>
                        
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Size</th>
                                    <th>PR</th>
                                    <th>Pattern</th>
                                    <th>On Hand</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="o">
                                    <td><t t-esc="o.no"/></td>
                                    <td><t t-esc="o.name"/></td>
                                    <td><span t-field="o.type"/></td>
                                    <td><t t-esc="o.size"/></td>
                                    <td><t t-esc="o.pattern"/></td>
                                    <td><t t-esc="o.pr"/></td>
                                    <td><t t-esc="o.quantity_onhand"/></td>
                                </tr>
                            </tbody>
                        </table>
                        </center>
                    </div>
                </div>
            </t>
        </template>
  

   <record model="ir.actions.report" id="action_product_monthly_report">
        <field name="name">Atlas Product Report</field>
        <field name="model">atlas.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.product_monthly_report</field>
        <field name="report_file">new.product_monthly_report</field>
        <field name="print_report_name">'Atlas Product Report'</field>
        <field name="binding_model_id" ref="model_atlas_product"></field>
        <field name="binding_type">report</field>
    </record>

    

    </data>
</odoo>
