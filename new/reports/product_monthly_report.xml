<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report template -->
        <template id="product_monthly_report">
            <t t-call="web.html_container">
                <t t-as="o">
                    <div class="page">
                        <div class="header">
                            <div class="company-info">
                                <div class="company-name">[Atlas Tire]</div>
                                <div class="company-address">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                                <div class="company-phone">[+93 (0) 787293329]</div>
                            </div>
                            
                        </div>
                        <center>
                            <h1>Atlas product report</h1>
                        
                        <table class="table table-condensed" border="1" style="border: 1px solid black; width:80%; text-align:center;">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Size</th>
                                    <th>PR</th>
                                    <th>Pattern</th>
                                    <th>On Hand</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="o">
                                    <td><t t-esc="o.name"/></td>
                                    <td><span t-field="o.type"/></td>
                                    <td><t t-esc="o.size"/></td>
                                    <td><t t-esc="o.pattern"/></td>
                                    <td><t t-esc="o.pr"/></td>
                                    <td><t t-esc="o.quantity_onhand"/></td>
                                </tr>
                            </tbody>
                        </table>
                        </center>
                    </div>
                        <div class="footer">
                                <div class="address">Between Haji Yaqab Square and Ansari Squar Haroon Market ,Kabul ,Afghanistan</div>
                                <div class="phone">+93(0)787293329</div>
                        </div>
                </t>
            </t>
        </template>
  

   <record model="ir.actions.report" id="action_product_monthly_report">
        <field name="name">Atlas Product Report</field>
        <field name="model">atlas.product</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.product_monthly_report</field>
        <field name="report_file">new.product_monthly_report</field>
        <field name="print_report_name">'Atlas Product Report'</field>
        <field name="binding_model_id" ref="model_atlas_product"></field>
        <field name="binding_type">report</field>
    </record>

    

    </data>
</odoo>
