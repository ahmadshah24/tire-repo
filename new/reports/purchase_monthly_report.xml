<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report template -->
        <template id="purchase_monthly_report">
    <t t-call="web.html_container">
        <t t-as="o">
            <div class="page">
                <div class="header">
                    <div class="company-info">
                        <div class="company-name">[Atlas Tire]</div>
                        <div class="company-address">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                        <div class="company-phone">[+93 (0) 787293329]</div>
                    </div>
                </div>
                <center>
                    <h1>Atlas Purchase report</h1>
                    <table class="table table-condensed" border="1" style="border: 1px solid black; width:80%; text-align:center;">
                        <thead>
                            <tr>
                                <th>Invoice No</th>
                                <th>Vonder</th>
                                <th>Date</th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>quantity</th>
                                <th>Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="o">
                                <td><t t-esc="o.invoice"/></td>
                                <td><span t-field="o.vender_id.name"/></td>
                                <td><t t-esc="o.date"/></td>
                                <td>
                                    <span t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.product_id.name"/><br/>
                                    </span>
                                </td>
                                 <td>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.price"/><br/>
                                    </t>
                                </td>
                                <td>
                                    <t t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.quantity"/><br/>
                                    </t>
                                </td>
                                <td><t t-esc="o.amount"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            <div class="footer">
                <div class="address">Between Haji Yaqab Square and Ansari Squar Haroon Market ,Kabul ,Afghanistan</div>
                <div class="phone">+93(0)787293329</div>
            </div>
        </t>
    </t>
</template>

  

    <record model="ir.actions.report" id="action_purchase_monthly_report">
        <field name="name">Atlas Purchase  Report</field>
        <field name="model">atlas.purchase</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.purchase_monthly_report</field>
        <field name="report_file">new.purchase_monthly_report</field>
        <field name="print_report_name">'Atlas purchase Report'</field>
        <field name="binding_model_id" ref="model_atlas_purchase"></field>
        <field name="binding_type">report</field>
    </record>

    

    </data>
</odoo>
