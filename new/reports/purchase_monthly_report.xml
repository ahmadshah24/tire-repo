<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report template -->
        <template id="purchase_monthly_report">
    <t t-call="web.html_container">
        <div class="page">
            <div class="header">
                <div class="company-info">
                    <div class="company-name">[Atlas Tire]</div>
                    <div class="company-address">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                    <div class="company-phone">[+93 (0) 787293329]</div>
                </div>
            </div>
            <center>
                <h1>Atlas purchase report</h1>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Invoice No</th>
                            <th>Vender</th>
                            <th>Date</th>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="o">
                            <tr>
                                <td><span t-field="o.no"/></td>
                                <td><span t-field="o.invoice"/></td>
                                <td><t t-esc="o.vender_id.name"/></td>
                                <td><t t-esc="o.date"/></td>
                                <td>
                                    <span t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.product_id.name"/><br/>
                                    </span>
                                </td>
                                <td>
                                    <span t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.price"/><br/>
                                    </span>
                                </td>
                                <td>
                                    <span t-foreach="o.line_ids" t-as="line">
                                        <t t-esc="line.quantity"/><br/>
                                    </span>
                                </td>
                                <td><t t-esc="o.amount"/></td>
                            </tr>
                        </t>
                        <tr>
                            <td colspan="7"></td>
                            <td><b>Total:</b></td>
                            <td><b><t t-esc="sum(doc.amount for doc in docs)"/></b></td>
                        </tr>
                    </tbody>
                </table>
            </center>
        <div class="footer">
            <div class="address">123 Main St., Anytown, USA</div>
            <div class="phone">123-456-7890</div>
        </div>
        </div>
    </t>
</template>

  

    <record model="ir.actions.report" id="action_purchase_monthly_report">
        <field name="name">Atlas Purchase Report</field>
        <field name="model">atlas.purchase</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.purchase_monthly_report</field>
        <field name="report_file">new.purchase_monthly_report</field>
        <field name="print_report_name">'Atlas Purchase Report'</field>
        <field name="binding_model_id" ref="model_atlas_purchase"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
