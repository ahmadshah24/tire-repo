<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report template -->
        <template id="takes_monthly_report">
    <t t-call="web.html_container">
        <t t-as="o">
            <div class="page">
                <div class="header">
                    <div class="company-info">
                        <div class="company-name">[Atlas Tire]</div>
                        <div class="company-address">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                        <div class="company-phone">[+93 (0) 787293329]</div>
                    </div>
                </div>
                <center>
                    <h1>Atlas Office Takes report</h1>
                    <table class="table table-condensed" border="1" style="border: 1px solid black; width:80%; text-align:center;">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Date</th>
                                <th>Check No</th>
                                <th>Amount</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="o">
                                <td><t t-esc="o.no"/></td>
                                <td><span t-field="o.date"/></td>
                                <td><t t-esc="o.check"/></td>
                                <td><t t-esc="o.amount"/></td>
                                <td><t t-esc="o.des"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            <div class="footer">
                <div class="address">Between Haji Yaqab Square and Ansari Squar Haroon Market ,Kabul ,Afghanistan</div>
                <div class="phone">+93(0)787293329</div>
            </div>
        </t>
    </t>
</template>

 <record model="ir.actions.report" id="action_takes_monthly_report">
        <field name="name">Atlas Takes Report</field>
        <field name="model">take.take</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.takes_monthly_report</field>
        <field name="report_file">new.takes_monthly_report</field>
        <field name="print_report_name">'Atlas Takes Report'</field>
        <field name="binding_model_id" ref="model_take_take"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
