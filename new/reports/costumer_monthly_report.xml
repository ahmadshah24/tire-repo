<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="costumer_monthly_report">
    <t t-call="web.basic_layout">
            <div class="page">
                <div class="body">
                <div class="">
                    <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                    <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                    <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                </div>
                <center>
                    <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas Costumer report</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Sale</th>
                                <th>Raidat</th>
                                <th>Returns</th>
                                <th>Reminder</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="o" > 
                                <td><t t-esc="o.no"/></td>
                                <td><t t-esc="o.name"/></td>
                                <td><span t-field="o.phone"/></td>
                                <td><t t-esc="o.address"/></td>
                                <td><t t-esc="o.sale"/></td>
                                <td><t t-esc="o.rasid"/></td>
                                <td><t t-esc="o.returns"/></td>
                                <td><t t-esc="o.reminder"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            </div>
    </t>
</template>

  
<record model="ir.actions.report" id="action_costumer_monthly_report">
        <field name="name">Atlas Costumer Report</field>
        <field name="model">costumerinfo.costumerinfo</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.costumer_monthly_report</field>
        <field name="report_file">new.cotumer_monthly_report</field>
        <field name="print_report_name">'Atlas costumer Report'</field>
        <field name="binding_model_id" ref="model_costumerinfo_costumerinfo"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
