<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Report template -->
        <template id="costumer_monthly_report">
    <t t-call="web.html_container">
        <!-- <t t-as="o"> -->
            <div class="page">
                <div class="header">
                    <div class="company-info">
                        <div class="company-name">[Atlas Tire]</div>
                        <div class="company-address">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                        <div class="company-phone">[+93 (0) 787293329]</div>
                    </div>
                </div>
                <center>
                    <h1>Atlas Costumer report</h1>
                    <table class="table table-condensed" border="1" style="border: 1px solid black; width:80%; text-align:center;">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Sale</th>
                                <th>Raidat</th>
                                <th>Returns</th>
                                <th>Reminder</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="o" > 
                                <td><t t-esc="o.no"/></td>
                                <td><t t-esc="o.name"/></td>
                                <td><span t-field="o.phone"/></td>
                                <td><t t-esc="o.address"/></td>
                                <td><t t-esc="o.sale"/></td>
                                <td><t t-esc="o.rasid"/></td>
                                <td><t t-esc="o.returns"/></td>
                                <td><t t-esc="o.reminder"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            <div class="footer">
                <div class="address">Between Haji Yaqab Square and Ansari Squar Haroon Market ,Kabul ,Afghanistan</div>
                <div class="phone">+93(0)787293329</div>
            </div>
        <!-- </t> -->
    </t>
</template>

  
<record model="ir.actions.report" id="action_costumer_monthly_report">
        <field name="name">Atlas Costumer Report</field>
        <field name="model">costumerinfo.costumerinfo</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.costumer_monthly_report</field>
        <field name="report_file">new.cotumer_monthly_report</field>
        <field name="print_report_name">'Atlas costumer Report'</field>
        <field name="binding_model_id" ref="model_costumerinfo_costumerinfo"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
