<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="sale_monthly_report">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="o">
        <div class="page">
            <div class="body">
                <div class="">
                    <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                    <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                    <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                </div>
            <center>
                <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas sale report</h1>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Bill No</th>
                            <th>Customer Name</th>
                            <th>Date</th>
                            <th>Product</th>
                            <th>price</th>
                            <th>Quantity</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><span t-field="o.no"/></td>
                            <td><span t-field="o.billNo"/></td>
                            <td><t t-esc="o.costumer_id.name"/></td>
                            <td><t t-esc="o.date"/></td>
                            <td>
                                <span t-foreach="o.line_ids" t-as="line">
                                    <t t-esc="line.product_id.name"/><br/>
                                </span>
                            </td>
                            <td>
                                <span t-foreach="o.line_ids" t-as="line">
                                    <t t-esc="line.price"/><br/>
                                </span>
                            </td>
                            <td>
                                <span t-foreach="o.line_ids" t-as="line">
                                    <t t-esc="line.quantity"/><br/>
                                </span>
                            </td>
                            <td><t t-esc="o.amount"/></td>
                        </tr>
                         <tr>
                            <td colspan="6"></td>
                            <td><b>Total:</b></td>
                            <td><b><t t-esc="sum(doc.amount for doc in docs)"/></b></td>
                        </tr>
                    </tbody>
                </table>
            </center>
        </div>
        </div>
        </t>
    </t>
</template>

  

    <record model="ir.actions.report" id="action_sale_monthly_report">
        <field name="name">Atlas Sala  ly Report</field>
        <field name="model">atlas.sale</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.sale_monthly_report</field>
        <field name="report_file">new.sale_monthly_report</field>
        <field name="print_report_name">'Atlas Sale Report'</field>
        <field name="binding_model_id" ref="model_atlas_sale"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
