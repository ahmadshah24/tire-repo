<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="costumer_rasidat_monthly_report">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="body">
                            <div class="">
                                <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                                <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                                <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                            </div>
                        <center>
                            <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas costumer report</h1>
                        
                        <table class="table table-bordered" >
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Customer Name</th>
                                    <th>Date</th>
                                    <th>Check No</th>
                                    <th>Amount</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="docs" t-as="o">
                                    <td><t t-esc="o.no"/></td>
                                    <td><span t-field="o.costumer_id.name"/></td>
                                    <td><t t-esc="o.date"/></td>
                                    <td><t t-esc="o.check"/></td>
                                    <td><t t-esc="o.amount"/></td>
                                    <td><t t-esc="o.des"/></td>
                                </tr>
                            </tbody>
                        </table>
                        </center>
                    </div>
                    </div>
                </t>
            </t>
        </template>
  

    <record model="ir.actions.report" id="action_costumer_rasidat_monthly_report">
        <field name="name">Atlas Costumer Rasidat Report</field>
        <field name="model">crasidat.crasidat</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.costumer_rasidat_monthly_report</field>
        <field name="report_file">new.cotumer_rasidat_monthly_report</field>
        <field name="print_report_name">'Atlas costumer Rasidat Report'</field>
        <field name="binding_model_id" ref="model_crasidat_crasidat"></field>
        <field name="binding_type">report</field>
    </record>

    

    </data>
</odoo>
