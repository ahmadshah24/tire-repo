<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="vender_monthly_report">
    <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="o">
            <div class="page">
                <div class="body">
                    <div class="">
                    <div class="company-name" style="font-weight:bold;">[Atlas Tire]</div>
                    <div class="company-address" style="font-weight:bold;">[Haroon Market Shar-e naw ,Kabul, Afghanistan]</div>
                    <div class="company-phone" style="font-weight:bold;"> [+93 (0) 787293329]</div>
                </div>
                <center>
                    <h1 style="margin-bottom:50px; margin-top:50px; font-weight:bold;">Atlas Vonders report</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Company Name</th>
                                <th>Address</th>
                                <th>phone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><t t-esc="o.no"/></td>
                                <td><t t-esc="o.name"/></td>
                                <td><span t-field="o.address"/></td>
                                <td><t t-esc="o.phone"/></td>
                                <td><t t-esc="o.email"/></td>
                            </tr>
                        </tbody>
                    </table>
                </center>
            </div>
            </div>
        </t>
    </t>
</template>
 
 <record model="ir.actions.report" id="action_vender_monthly_report">
        <field name="name">Atlas Vender Report</field>
        <field name="model">vender.vender</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">new.vender_monthly_report</field>
        <field name="report_file">new.vender_monthly_report</field>
        <field name="print_report_name">'Atlas Vender Report'</field>
        <field name="binding_model_id" ref="model_vender_vender"></field>
        <field name="binding_type">report</field>
    </record>
    

    </data>
</odoo>
